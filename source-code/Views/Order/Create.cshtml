@model WebApplication1.order
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    veebdbEntities data = new veebdbEntities();
}

<h2>CREATE NEW ORDER</h2>
#@ViewBag.IdOrder
<!-- /.row -->
<div class="row">
    <div id="main_content" class="col-sm-12">

        <div class="Order_content">
            @using (Html.BeginForm("Create", "Order", FormMethod.Post, new {enctype = "multipart/form-data", @id = "validation-form"}))
            {


                @Html.Partial("_Input")

                <div class="row">
                    <div class="col-sm-6">


                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="page_action">
                                <a data-toggle="modal" data-target="#myModal">Add New</a>
                                <a >Apply</a>

                            </div>



                        </div>

                    </div>
                </div>

            }

        </div><!-- Order_content -->

    </div><!-- main_content -->
</div>

<script>
    $("#submitbutton").on('click', function (e) {
        e.preventDefault();
        if ($('#validation-form').valid()) {
            $('#validation-form')[0].submit();
        }
    });
</script>