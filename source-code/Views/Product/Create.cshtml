@model WebApplication1.item
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    veebdbEntities data = new veebdbEntities();
}

<h2>CREATE NEW PRODUCT</h2>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
     
            <div id="main_content" class="col-sm-12">
               
                    <div class="product_content">
                        @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data",@id= "validation-form" }))
                        {


                            @Html.Partial("_Input")
                           
                            <input type="submit" class="button button-sm" value="Save" id="submitbutton" name="save_product">
                        }
                        
                    </div><!-- product_content -->
               
            </div><!-- main_content -->

          
    </div>
</div>
<script>

    $("#submitbutton").on('click', function (e) {
        e.preventDefault();
        bootbox.confirm("Lưu", function (isOK) {
            if (isOK) {
                $('#submitbutton').parents("form").submit();
            }
        });
    });
</script>