@model WebApplication1.item
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    veebdbEntities data = new veebdbEntities();
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add New Product</h1>
    </div>

</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {


                    @Html.Partial("_Input")
                    <div class="row">
                        <div class="col-lg-6 text-right">
                            <button type="submit" id="submitbutton" class="btn btn-primary">Lưu</button>

                            <a href="@Url.Action("Index","Product")" cla class="btn btn-primary">Hủy</a>
                        </div>
                        <div class="col-lg-6 text-left">

                        </div>
                    </div>

                }
            </div>

        </div>
    </div>
</div>
<script>

    $("#submitbutton").on('click', function (e) {
        e.preventDefault();
        bootbox.confirm("Lưu", function (isOK) {
            if (isOK) {
                $('#submitbutton').parents("form").submit();
            }
        });
    });
</script>