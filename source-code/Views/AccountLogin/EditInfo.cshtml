@model WebApplication1.userdata

@{
    ViewBag.Title = "EditUserInfo";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    var check = Model.Id;
}

<h2>Update Profile Info</h2>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">

        <div id="main_content" class="col-sm-12">

            <div class="product_content">
                @using (Html.BeginForm("SaveEditInfo", "AccountLogin", FormMethod.Post, new { enctype = "multipart/form-data", @id = "validation-form" }))
                {


                    @Html.HiddenFor(model => model.Id)
                    <div class="row">
                        <div class="col-sm-4">
                            <h3>CONTACT INFO</h3>
                            <div class="form-group">
                                <label>Firsname</label>
                                @Html.TextBoxFor(x => x.firstname, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Lastname</label>
                                @Html.TextBoxFor(x => x.lasname, new {@class = "form-control"})
                            </div>

                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.contact_email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(x => x.contact_phone, new { @class = "form-control" })
                            </div>

                           
                          


                        </div>
                        <div class="col-sm-4">
                            <h3>DELIVERY INFO</h3>
                            <div class="form-group">
                                <label>Company Name</label>
                                @Html.TextBoxFor(x => x.company_name, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(x => x.delivery_name, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.delivery_email, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(x => x.delivery_phone, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Address Line 1</label>
                                @Html.TextBoxFor(x => x.delivery_address1, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Address Line 2</label>
                                @Html.TextBoxFor(x => x.delivery_address2, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Suburd </label>
                                @Html.TextBoxFor(x => x.delivery_suburb, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Post Code </label>
                                @Html.TextBoxFor(x => x.delivery_postcode, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>State </label>
                                @Html.TextBoxFor(x => x.delivery_state, new {@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label>Contry </label>
                                @Html.TextBoxFor(x => x.delivery_contry, new {@class = "form-control"})
                            </div>

                        </div>
                        <div class="col-sm-4">
                            <h3>BILLING INFO</h3>
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(x => x.billing_name, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                @Html.TextBoxFor(x => x.billing_email, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                @Html.TextBoxFor(x => x.billing_phone, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Address Line 1</label>
                                @Html.TextBoxFor(x => x.billing_address1, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Address Line 2</label>
                                @Html.TextBoxFor(x => x.billing_address2, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Suburd </label>
                                @Html.TextBoxFor(x => x.billing_suburb, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Post Code </label>
                                @Html.TextBoxFor(x => x.billing_poscode, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>State </label>
                                @Html.TextBoxFor(x => x.billing_state, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Contry </label>
                                @Html.TextBoxFor(x => x.billing_country, new { @class = "form-control" })
                            </div>

                        </div>
                    </div>


                    <input type="submit" class="button button-sm" value="Save" id="submitbutton" name="save_product">
                    <a href="@Url.Action("Index","AccountLogin")">Cancel</a>
                }

            </div><!-- product_content -->

        </div><!-- main_content -->


    </div>
</div>
<script>
    $("#submitbutton").on('click', function (e) {
        e.preventDefault();
        if ($('#validation-form').valid()) {
            $('#validation-form')[0].submit();
        }
    });
</script>




