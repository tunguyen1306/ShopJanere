
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    veebdbEntities data = new veebdbEntities();
}
<h2>CREATE NEW VOCABULARY</h2>

<!-- /.row -->
<div class="row">
    <div class="col-lg-12">

        <div id="main_content" class="col-sm-12">

            <div class="Order_content">
                @using (Html.BeginForm("Create", "Vocabulary", FormMethod.Post, new { @id = "validation-form" }))
                {


                    @Html.Partial("_Input")


                    <div class="row">
                        <div class="col-sm-6">


                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <div class="page_action">

                                    <a id="submitbutton">Save</a>
                                    <a class="button button-sm" href="@Url.Action("Index","Vocabulary")">Cancel</a>
                                </div>



                            </div>

                        </div>
                    </div>
                }

            </div><!-- Order_content -->

        </div><!-- main_content -->


    </div>
</div>
<script>
    $("#submitbutton").on('click', function (e) {
        e.preventDefault();
        if ($('#validation-form').valid()) {
        $('#validation-form')[0].submit();
        }


    });
</script>