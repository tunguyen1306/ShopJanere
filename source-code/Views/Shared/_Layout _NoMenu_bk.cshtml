                            {
                                <a href="@Url.Action("Products", "Home")"><div class="col-lg-2 col-md-2 col-sm-2 col-xs-4  top-menu-focus">Products</div></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Products", "Home")"><div class="col-lg-2 col-md-2 col-sm-2 col-xs-4  top-menu-normal">Products</div></a>
                            }
                            @* @if (controllerName=="Home" && actionName == "BulkProducts")
                {
                    <a href="@Url.Action("Products", "Home")"><div class="col-lg-2 top-menu-focus">Bulk Items</div></a>
                }
                else
                {
                    <a href="@Url.Action("BulkProducts", "Home")"><div class="col-lg-2 top-menu-normal">Bulk Items</div></a>
                }*@
                            @if (controllerName == "Home" && actionName == "Download")
                            {
                                <a href="@Url.Action("Download", "Home")"><div class="col-lg-2 col-md-2 col-sm-2 col-xs-4  top-menu-focus">Dowload</div></a>
